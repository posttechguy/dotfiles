build_fmenu() {
  local title="$1"

  FMENU=(
    fzf -i
    --layout=reverse
    --exact
    --border=bold
    --border=rounded
    --multi
    --color=dark
    --height=70%
    --info=hidden
    --header-first
    --bind change:top
    --prompt
    --preview="$title"
  )
}

